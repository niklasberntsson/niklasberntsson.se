
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lägg in nytt recept</h2>

<form method="get" action="~/Home/Insert">
    <div class="form-group">
        <label for="name">Namn</label>
        <input type="text" class="form-control" id="name" name="name" />
    </div>
    <div class="form-group">
        <label for="type">Måltidstyp</label>
        <select class="form-control" id="type" name="type">
            @foreach (var type in ViewBag.Types)
            {
                <option value="@type.Id">@type.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="link">Länk</label>
        <input type="text" class="form-control" id="link" name="link" />
    </div>
    <div class="form-group">
        <label for="type">Ursprung</label>
        <select class="form-control" id="origin" name="origin">
            @foreach (var origin in ViewBag.Origin)
            {
                <option value="@origin.Id">@origin.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="type">Måltidstyp</label>
        <select class="form-control" id="meal" name="meal">
            @foreach (var meal in ViewBag.Meal)
            {
                <option value="@meal.Id">@meal.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-default">Lägg till</button>
</form>
