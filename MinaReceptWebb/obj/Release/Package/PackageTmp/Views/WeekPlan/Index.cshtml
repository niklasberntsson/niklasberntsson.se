<div class="row">
    <h4>Veckoplanering</h4>
    @for (var i = 0; i < ViewBag.WeekDays.Length; i++)
    {
        
        <div class="panel panel-primary">
            <div class="panel-heading">@ViewBag.WeekDays[i]</div>

            <div class="panel panel-default">
                <div class="panel-heading">Lunch</div>
                <div class="panel-body">
                    <select class="form-control">
                        @foreach (var item in ViewBag.WeekPlan.WeekItems)
                        {
                            <option>@item.Recipe.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">Middag</div>
                <div class="panel-body">
                    <select class="form-control">
                        @foreach (var item in ViewBag.WeekPlan.WeekItems)
                        {
                            <option>@item.Recipe.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    }
</div>