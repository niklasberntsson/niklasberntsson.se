@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Veckoplan</h2>

<input type="hidden" name="weekPlanId" id="weekPlanId" value="@ViewBag.WeekPlan.Id"/>

<button type="button" class="btn-success" id="btnCreateNewWeekPlan">Skapa ny veckoplan</button>
<form id="newWeekPlan">
    <div class="form-group">
        <label for="name">Namn:</label>
        <input type="text" class="form-control" id="name">
    </div>
    <div class="checkbox">
        <label><input type="checkbox" name="active" id="active"> Markera som aktiv</label>
    </div>
    <button type="button" class="btn btn-default" id="btnSubmitNewWeekPlan">Spara</button>
</form>

